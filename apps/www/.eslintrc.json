{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier", "svg-jsx"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "semi": true,
        "trailingComma": "all",
        "printWidth": 80,
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ],
    "no-console": "warn",
    "svg-jsx/camel-case-dash": "error",
    "svg-jsx/camel-case-colon": "error",
    "svg-jsx/no-style-string": "error"
  }
}
